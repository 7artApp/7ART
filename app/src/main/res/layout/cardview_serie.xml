<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@style/Theme.7ART">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_serie_image"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:theme="@style/Theme.7ART"
        app:cardCornerRadius="28dp"
        app:cardElevation="24dp">

        <ImageView
            android:id="@+id/serie_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/platoon" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/serie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/bebas_neue_regular"
        android:gravity="center"
        android:text="Avengers: Endgame"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/star_icon"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:src="@drawable/star_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintTop_toBottomOf="@+id/serie_title"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/serie_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.5 (IMDB)"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintStart_toEndOf="@id/star_icon"
            app:layout_constraintTop_toBottomOf="@+id/serie_title"
            tools:ignore="NotSibling" />

        <ImageView
            android:id="@+id/calendar_icon"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:src="@drawable/calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview_serie_image"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/serie_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/black"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@+id/calendar_icon"
            app:layout_constraintTop_toBottomOf="@+id/serie_title"
            tools:ignore="NotSibling" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/sinopse_abreviada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Sinopse"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_semibold"/>

    <TextView
        android:id="@+id/serie_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:justificationMode="inter_word"/>


</LinearLayout>